<h1>Index of Student Resumes</h1>

<% if @students.count == 0%>
  <h3> There are no resumes available for view: </h3>
<% elsif @students.count == 1%>
  <h3> There is <%= @students.count %> resume available for view: </h3>
<% elsif @students.count > 1 %>
  <h3> There are <%= @students.count %> resumes available for view: </h3>
<% end %>

<% @students.each do |student| %>
  <p>Photo: <img src="<%= student["photo"] %>"></p>
  <p>Name: <%= student["lastName"] %>, <%= student["firstName"] %></p>
  <p>Email: <%= student["email"] %></p>
  <p>Linkedin: <%= student["linkedinUrl"] %></p>
  <p>Twitter: <%= student["twitterHandle"] %></p>
  <p>Resume website: <%= student["onlineResume_url"] %></p>
  <p>Github: <%= student["githubUrl"] %></p>
    <hr>
<% end %>

